# Copy to local.env (do NOT commit local.env)
###############################################
# Google OAuth Client IDs (per platform)
#
# Web: REQUIRED for web builds. Use your web client ID from Google Cloud Console.
# Other platforms: Optional here; if unset, the plugin initializes without
#      a clientId and relies on platform-side config (GoogleService-Info.plist
#      for iOS/macOS, google-services.json for Android).
###############################################

# Web (required for web auth)
GOOGLE_CLIENT_ID_WEB=889476058542-0lhrbv0ua42plo1iq6ef48mq3ffss25h.apps.googleusercontent.com

# Android
GOOGLE_CLIENT_ID_ANDROID=

# iOS
GOOGLE_CLIENT_ID_IOS=

# macOS
GOOGLE_CLIENT_ID_MACOS=

# Windows
GOOGLE_CLIENT_ID_WINDOWS=

# Linux
GOOGLE_CLIENT_ID_LINUX=

###############################################
# Google OAuth Server Client IDs
# Used for backend authentication - get ID tokens that can be verified by backend
###############################################

# Universal server client ID (recommended - works for all platforms)
GOOGLE_SERVER_CLIENT_ID=YOUR_SERVER_CLIENT_ID.apps.googleusercontent.com

# Platform-specific server client IDs (optional, overrides universal)
GOOGLE_SERVER_CLIENT_ID_WEB=
GOOGLE_SERVER_CLIENT_ID_ANDROID=
GOOGLE_SERVER_CLIENT_ID_IOS=
GOOGLE_SERVER_CLIENT_ID_MACOS=
GOOGLE_SERVER_CLIENT_ID_WINDOWS=
GOOGLE_SERVER_CLIENT_ID_LINUX=

###############################################
# API Configuration
###############################################

# Backend API Base URL
# Default values are set based on platform in lib/config/api_config.dart:
# - Web: http://localhost:3000
# - Android Emulator: http://10.0.2.2:3000
# - iOS Simulator/Desktop: http://localhost:3000
# Uncomment and set this to override the default:
# API_BASE_URL=http://localhost:3000

# For physical devices, use your machine's local IP:
# API_BASE_URL=http://192.168.1.XXX:3000


