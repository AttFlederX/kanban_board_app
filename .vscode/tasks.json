{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Flutter: Web (chrome, port 58072) with local.env",
      "type": "shell",
      "command": "flutter",
      "args": [
        "run",
        "-d",
        "chrome",
        "--web-port",
        "58072",
        "--dart-define-from-file",
        "${workspaceFolder}/local.env"
      ],
      {
        "label": "Flutter: macOS with local.env",
        "type": "shell",
        "command": "flutter",
        "args": [
          "run",
          "-d",
          "macos",
          "--dart-define-from-file",
          "${workspaceFolder}/local.env"
        ],
        "options": { "cwd": "${workspaceFolder}" },
        "problemMatcher": []
      },
      {
        "label": "Flutter: Windows with local.env",
        "type": "shell",
        "command": "flutter",
        "args": [
